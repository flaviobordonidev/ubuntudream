<div id="<%= dom_id lesson %>">
  <!-- Card list START -->
  <div class="col-12">
    <div class="card shadow overflow-hidden p-2">
      <div class="row g-0">
        <div class="col-md-5 overflow-hidden">
          <%#= image_tag "mockups/training_01.jpeg", class: "rounded-2", alt: "Card image" %>
          <% if lesson.picture_image.attached? %>
            <%= image_tag lesson.picture_image, class: "rounded-2", alt: "painting" %> 
          <% else %>
            <p>Nessuna immagine presente</p>
          <% end %>
        </div>
        <div class="col-md-7">
          <div class="card-body">
            <!-- Badge and rating -->
            <div class="d-flex justify-content-between align-items-center mb-2">
              <!-- Badge -->
              <a href="#" class="badge bg-primary text-white mb-2 mb-sm-0">Development</a>
              <!-- Rating and wishlist -->
              <div>
                <span class="h6 fw-light me-3"><i class="fas fa-star text-warning me-1"></i>4.5</span>
                <a href="#" class="text-danger"><i class="fas fa-heart"></i></a>
              </div>
            </div>

            <!-- Title -->
            <h5 class="card-title">
              <%= link_to lesson.name, root_path %>
            </h5>
            <p class="text-truncate-2 d-none d-lg-block"><%= lesson.description_rtf.to_plain_text.truncate(160, separator: ' ') %></p>

            <!-- Info -->
            <ul class="list-inline">
              <li class="list-inline-item h6 fw-light mb-1 mb-sm-0"><i class="far fa-clock text-danger me-2"></i><%= lesson.duration %> m</li>
              <li class="list-inline-item h6 fw-light mb-1 mb-sm-0"><i class="fas fa-table text-orange me-2"></i> 12 steps</li>
              <li class="list-inline-item h6 fw-light"><i class="fas fa-signal text-success me-2"></i>Intermediate</li>
            </ul>

            <!-- Price and avatar -->
            <div class="d-sm-flex justify-content-sm-between align-items-center">
              <!-- Avatar -->
              <div class="d-flex align-items-center">
                <div class="avatar">
                  <%#<img class="avatar-img rounded-circle" src="assets/images/avatar/06.jpg" alt="avatar">%>
                  <%#= image_tag "mockups/training_01_avatar.png", class: "avatar-img rounded-circle", alt: "avatar" %>
									<% if lesson.picture_author_image.attached? %>
										<%= image_tag lesson.picture_author_image, class: "avatar-img rounded-circle", alt: "avatar" %>
									<% else %>
										<%= image_tag "mockups/training_01_avatar.png", class: "avatar-img rounded-circle", alt: "avatar" %>
									<% end %>
                </div>
                <p class="mb-0 ms-2"><a href="#" class="h6 fw-light"><%= lesson.picture_author_name %></a></p>
              </div>
              <!-- Price -->
              <div class="mt-3 mt-sm-0">
                <%= link_to "View more", root_path, class: "btn btn-dark" %>
                <%# <a href="#" class="btn btn-dark">View more</a>     %>
              </div>                  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Card list END -->
</div>
